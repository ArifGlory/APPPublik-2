<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    tools:context="com.skripsi23.appubblik.TambahLaporan">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FORM PENGADUAN MASALAH"
            android:textColor="#000"
            android:textSize="30dp"
            android:gravity="center"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="150dp"
        android:padding="20dp"
        android:layout_marginHorizontal="20dp">


        <EditText
            android:id="@+id/etnamap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/et_background1"
            android:hint="Nama"
            android:inputType="textPersonName"
            android:textColor="#000"
            android:padding="10dp"
            android:textColorHint="#999999" />

        <EditText
            android:id="@+id/etnohp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/et_background1"
            android:hint="No Handphone"
            android:inputType="textPersonName"
            android:textColor="#000"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:textColorHint="#999999" />

        <EditText
            android:id="@+id/etlokasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/et_background1"
            android:hint="Lokasi Kejadian"
            android:inputType="textPersonName"
            android:textColor="#000"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:textColorHint="#999999" />

        <EditText
            android:id="@+id/etlaporan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/et_background1"
            android:hint="Laporan Kejadian"
            android:inputType="textPersonName"
            android:textColor="#000"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:textColorHint="#999999" />

        <Button
            android:id="@+id/btnlaporan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:padding="10dp"
            android:textColor="@android:color/background_dark"
            android:text="Laporkan Masalah"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_back1"
            android:layout_marginBottom="10dp"
            />


    </LinearLayout>













</RelativeLayout>
