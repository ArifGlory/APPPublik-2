<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/viewBg">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:background="@color/white_greyish"
                android:layout_width="match_parent"
                app:title="Pelayanan Kesehatan"
                app:titleTextColor="@color/black2"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        </android.support.design.widget.AppBarLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="20dp"
           android:layout_below="@+id/appbar"
           android:id="@+id/line1"
           android:layout_marginBottom="40dp"
           android:orientation="vertical">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/title_rsud"
               android:padding="10dp"
               android:gravity="left"
               android:textStyle="bold"
               android:layout_gravity="center_vertical"
               android:textColor="@color/btn_context_menu_text_red"
               android:textSize="17sp" />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/sub_title_rsud"
               android:padding="10dp"
               android:textStyle="normal"
               android:layout_gravity="center_vertical"
               android:textColor="@color/black2"
               android:textSize="16sp" />

       </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line1"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:weightSum="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="90dp"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:id="@+id/btnBPJS"
                    android:padding="10dp"
                    android:textSize="13sp"
                    android:layout_height="100dp"
                    android:background="@mipmap/kotak"
                    android:text="Informasi BPJS"/>


                <Button
                    android:id="@+id/btnDokterPraktik"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@mipmap/kotak"
                    android:text="Praktik Dokter"
                    android:textSize="13sp" />

                <Button
                    android:layout_width="90dp"
                    android:layout_weight="1"
                    android:id="@+id/btnCS"
                    android:layout_height="100dp"
                    android:textSize="13sp"
                    android:background="@mipmap/kotak"
                    android:text="Customer Service"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="90dp"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:id="@+id/btnRawatJalan"
                    android:padding="10dp"
                    android:textSize="13sp"
                    android:layout_height="100dp"
                    android:background="@mipmap/kotak"
                    android:text="Informasi Rawat jalan"/>


                <Button
                    android:layout_width="90dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/btnAmbulans"
                    android:layout_weight="1"
                    android:layout_height="100dp"
                    android:textSize="13sp"
                    android:background="@mipmap/kotak"
                    android:text="Ambulans emergency"/>

                <Button
                    android:layout_width="90dp"
                    android:layout_weight="1"
                    android:id="@+id/btnJamBesuk"
                    android:layout_height="100dp"
                    android:textSize="13sp"
                    android:background="@mipmap/kotak"
                    android:text="Informasi Waktu Besuk"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="90dp"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:id="@+id/btnLokasi"
                    android:padding="10dp"
                    android:textSize="13sp"
                    android:layout_height="100dp"
                    android:background="@mipmap/kotak"
                    android:text="Informasi Lokasi"/>


                <Button
                    android:layout_width="90dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/btnKamar"
                    android:layout_weight="1"
                    android:layout_height="100dp"
                    android:textSize="13sp"
                    android:background="@mipmap/kotak"
                    android:text="Ketersediaan kamar"/>

                <Button
                    android:layout_width="90dp"
                    android:layout_weight="1"
                    android:id="@+id/btnTataTertib"
                    android:layout_height="100dp"
                    android:textSize="13sp"
                    android:layout_marginTop="7dp"
                    android:background="@mipmap/kotak"
                    android:text="Tata tertib"/>

            </LinearLayout>


        </LinearLayout>




    </RelativeLayout>
</ScrollView>